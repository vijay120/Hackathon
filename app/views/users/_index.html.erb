<h1>Listing users</h1>

<table>
  <tr>
    <th>Firstname</th>
    <th>Lastname</th>
    <th>RoomDrawNumber</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @page.users.each do |user| %>
  <tr>
    <td><%= user.firstName %></td>
    <td><%= user.lastName %></td>
    <td><%= user.roomDrawNumber %></td>
    <td><%= user.email %></td>
    <td><%= link_to 'Show', [@page, user] %></td>
    <td><%= link_to 'Edit', edit_page_user_path(@page, user) %></td>
    <td><%= link_to 'Destroy', [@page, user], confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

